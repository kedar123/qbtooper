<%= render :partial => "layouts/header" %>
<body class="showgrid-off">
<div class="container two-col">
  <div id="header">
  <%= render :partial => "layouts/header_top" %>
  </div>
  <div id="center">
    <div class="">
      <div class="top"><div class="right"><div class="grip"></div></div></div>
      <div class="middle"><div class="right">
        <div class="content">
        <% if flash[:notice] %>
          <div id="notice">
          <%= flash[:notice] %>
          </div>
        <% else %>
          <div id="notice" style="display:none;">
          </div>
        <% end %>
          <%= yield :layout %>
        </div>
      </div></div>
      <div class="bottom"><div class="right"></div></div>
    </div>
  </div>
  <div class="clear"></div>
  <%= render :partial => "layouts/footer_nav" %>
</div>
<%= javascript_include_tag 'wesabe/views/shared/form', "wesabe/views/shared/entry-point" %>
</body>
</html>
